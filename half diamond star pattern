#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    cout<<endl;
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=n;j++)
        {
            if(i>=j)
            {
                cout<<"*";
            }
            
        }
        cout<<endl;
        
    }
    for(int k=n-1;k>=1;k--)
    {
        for(int l=n-1;l>=1;l--)
        {
            if(l<=k)
            {
                cout<<"*";
            }
        }
        cout<<endl;
    }
}
