#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=n;j++)
        {
            if(i>=j)
        {
             if((j==1)||(i==j)||(i==n))
            {
                cout<<"*";
            }
            else
            {
                cout<<" ";
            }
        }
        }
        cout<<endl;
    }
}
