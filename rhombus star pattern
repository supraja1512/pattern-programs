#include<iostream>
using namespace std;
int main()
{
    int n;                                
    cin>>n;
    for(int i=n;i>=1;i--)
    {
        for(int j=1;j<=n;j++)
        {
            if(j<i)
            {
                cout<<" ";
            }
        }
        for(int k=n;k>=1;k--)
        {                           
            cout<<"* ";
        }
        cout<<endl;
    }
}
