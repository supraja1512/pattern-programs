SOURCE CODE:
#include<iostream>
using namespace std;
int main()     
{
    for(int i=4;i>=1;i--)
    {
        for(int j=1;j<=(i*2)-1;j++)   
        {
            cout<<j;
            }
            cout<<endl;
    }
   
}   
